export HEADER_NAME

# Variables
GREEN = \033[0;32m
ORANGE = \033[38;5;208m
RESET = \033[0m

NAME = philo
CC = gcc
CFLAGS = -Wall -Wextra -Werror -pthread -g3 -fsanitize=thread
RM = rm -f

SRCS = philosophers.c \

SUPP = utils/checking.c \
		utils/numbers.c \
		utils/helpers.c \
		utils/monitor.c \
		utils/thread_checkers.c \
		utils/thread_funcs.c \

%.o: %.c
	@printf "\tCompiling $<...\r"
	@$(CC) $(CFLAGS) -c $< -o $@
	@printf "\33[2K"

$(NAME): $(SUPP) $(SRCS)
	@echo "$(ORANGE)Compiling $(NAME)...$(RESET)"
	@$(CC) $(SUPP) $(SRCS) $(CFLAGS) -o $(NAME)
	@echo "$(GREEN)$(NAME) built successfully!$(RESET)"

# Rules
all: $(NAME)

clean:
	@echo "$(ORANGE)Cleaning up...$(RESET)"
	@rm -f *.o
	@rm -f utils/*.o
	@echo "$(GREEN)Clean up successful$(RESET)"

fclean: clean
	@echo "$(ORANGE)Full clean up...$(RESET)"
	@rm -f $(NAME)
	@echo "$(GREEN)Full clean up successful$(RESET)"

re: fclean all

.PHONY: all clean fclean re
export HEADER_LIB

define HEADER_NAME


 _____                       _ _ _                     _     _ _       
/  __ \                     (_) (_)                   | |   (_) |      
| /  \/ ___  _ __ ___  _ __  _| |_ _ __   __ _   _ __ | |__  _| | ___  
| |    / _ \| '_ ` _ \| '_ \| | | | '_ \ / _` | | '_ \| '_ \| | |/ _ \ 
| \__/\ (_) | | | | | | |_) | | | | | | | (_| | | |_) | | | | | | (_) |
 \____/\___/|_| |_| |_| .__/|_|_|_|_| |_|\__, | | .__/|_| |_|_|_|\___/ 
                      | |                 __/ | | |                    
                      |_|                |___/  |_|                    



endef
export HEADER_NAME

# Variables
GREEN = \033[0;32m
ORANGE = \033[38;5;208m
RESET = \033[0m

NAME = philo
CC = gcc
CFLAGS = -Wall -Wextra -Werror -pthread
DEVFLAGS = -pthread -g3 -fsanitize=thread
RM = rm -f

SRCS = philosophers.c \

SUPP = utils/checking.c \
		utils/numbers.c \
		utils/helpers.c \
		utils/monitor.c \
		utils/thread_checkers.c \
		utils/thread_funcs.c \
		utils/initialization.c \

$(NAME): $(SUPP) $(SRCS)
	@echo "$$HEADER_NAME"
	@$(CC) $(SUPP) $(SRCS) $(CFLAGS) -o $(NAME)

# Rules
all: $(NAME)

debug:
	@echo "$(ORANGE)Complining debug $(NAME)$(RESET)"
	@$(CC) $(SUPP) $(SRCS) $(DEVFLAGS) -o $(NAME)

clean:
	@echo "$(GREEN)There are no temp files to clean$(RESET)"

fclean:
	@echo "$(ORANGE)Full clean up...$(RESET)"
	@rm -f $(NAME)
	@echo "$(GREEN)Full clean up successful$(RESET)"

re: fclean all

header:
	@echo "$$HEADER"

help:
	@echo "$$HEADER"
	@echo "make : complies the project."
	@echo "make all : complies the project and the bonus."
	@echo "make re : recompiles the project."
	@echo "make debug : runs the program in debug mode."
	@echo "make clean : cleans up object files."
	@echo "make fclean : cleans up all files generated by the makefile."

.PHONY: all clean fclean re header debug help